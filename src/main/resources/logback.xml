<?xml version="1.0" encoding="UTF-8"?>
<configuration>

	<!-- Send log messages to System.out -->
	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>%d{HH:mm:ss.SSS} [%thread][%level][%logger{5}] %msg%n</pattern>
		</encoder>
	</appender>

